{
    "manifest_version": 2,
    "name": "LiveReader",
    "version": "0.2",

    "description": "Simple feed reader add-ons for Firefox, yet another Live Bookmarks.",

    "permissions": [
        "http://*/",
        "https://*/",
        "storage"
    ],

    "icons": {
        "48": "image/icon.png"
    },

    "browser_action": {
        "default_title": "LiveReader",
        "default_popup": "popup.html",
        "default_icon": "image/rss-dark.svg",
        "theme_icons": [
            {
                "light": "image/rss-light.svg",
                "dark": "image/rss-dark.svg",
                "size": 16
            },
            {
                "light": "image/rss-light.svg",
                "dark": "image/rss-dark.svg",
                "size": 32
            }
        ]
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "options_ui": {
        "page": "options.html"
    },

    "applications": {
        "gecko": {
            "id": "live-reader@taqpan.com"
        }
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}